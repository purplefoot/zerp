[check_inc_dec a;
    print "Testing inc/dec^INC...";
    a = 0;
    @inc a;
    @je a 1 ?~fail;
    @inc a; @inc a; @inc a;
    @je a 4 ?~fail;
    print "ok^Signed INC...";
    a = -1;
    @inc a;
    @jz a ?~fail;
    print "ok^DEC...";
    a = 4;
    @dec a;
    @je a 3 ?~fail;
    @dec a; @dec a; @dec a;
    @jz a ?~fail;
    print "ok^Signed DEC...";
    @dec a;
    @je a (-1) ?~fail;
    print "ok^INC_CHK...";
    a = -2;
    @inc_chk a 0 ?fail; ! -1
    @je a (-1) ?~fail;
    @inc_chk a 1 ?fail; ! 0
    @jz a ?~fail;
    @inc_chk a 2 ?fail; ! 1
    @je a 1 ?~fail;
    print "ok^DEC_CHK...";
    a = 2;
    @dec_chk a 1 ?fail; ! 1
    @je a 1 ?~fail;
    @dec_chk a 0 ?fail; ! 0
    @jz a ?~fail;
    @dec_chk a (-1) ?fail; ! -1
    @je a (-1) ?~fail;
    print "ok^";
    rtrue;
.fail;
    print "fail: ", a, "^";
    rfalse;
];

Object white_room "white walled room";

Object table "wooden table" white_room;

Object chair "bentwood chair" white_room;

Object small_box "small box" white_room;

Object cup "china cup" table;

[objects a;
    print "Testing object tree manipulation...^";
	print "Check the tree is as it should be...";
	@get_parent white_room a;
	@jz a ?~fail;
	@get_parent table a;
	@je a white_room ?~fail;
	@get_parent cup a;
	@je a table ?~fail;
	@get_child white_room a ?~fail;
	@je a table ?~fail;
	@get_sibling table a ?~fail;
	@je a chair ?~fail;
	@get_sibling chair a ?~fail;
	@je a small_box ?~fail;
	@get_sibling small_box a ?fail;
	@get_parent chair a;
	@je white_room a ?~fail;
	@get_parent cup a;
	@je table a ?~fail;
	@get_sibling cup a ?fail;
	print "ok^";
	print "Remove object...";
	@remove_obj chair;
	@get_parent chair a;
	@jz a ?~bad_parent;
	@get_sibling chair a ?bad_sibling;
	@get_sibling table a ?~bad_sibling;
	@je small_box a ?~bad_sibling;
	@remove_obj small_box;
	@get_parent small_box a;
	@jz a ?~bad_parent;
	@get_sibling small_box a ?bad_sibling;
	@get_sibling table a ?bad_sibling;
	print "ok^";
	print "Insert object...";
	@insert_obj chair white_room;
	@get_parent chair a;
	@je white_room a ?~bad_parent;
	@get_child white_room a ?~bad_child;
	@get_sibling chair a ?~bad_sibling;
	@je table a ?~bad_sibling;
	print "ok^";
	rtrue;
.bad_parent;
	print "bad parent - ", a, " ";
	jump fail;
.bad_sibling;
	print "bad sibling - ", a, " ";
	jump fail;
.bad_child;
	print "bad child - ", a, " ";
.fail;
    print "fail^";
    rfalse;
];
