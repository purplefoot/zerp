    print "JE 1 2...";
    @je 1 2 ?fail;
    print "ok^";
    print "JE@@126 1 2...";
    @je 1 2 ?~ok2;
    jump fail;
.ok2;
    print "ok^";
    print "JE 1 1 2 3...";
    @je 1 1 2 3 ?ok3;
    jump fail;
.ok3;
    print "ok^";
    print "JE@@126 1 1 2 3...";
    @je 1 1 2 3 ?~fail;
    print "ok^";
    print "JE 3 1 2 3...";
    @je 3 1 2 3 ?ok4;
    jump fail;
